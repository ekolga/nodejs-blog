<div class="body-content">
    {{#if error.length}}
    {{#each error}}
    <p class="alert error">{{this}}</p>
    {{/each}}
    {{/if}}

    {{#if success.length}}
    {{#each success}}
    <p class="alert success">{{this}}</p>
    {{/each}}
    {{/if}}

    {{#if articles.length}}
    {{#each articles}}
    <div class="article">
        <div class="article__title">
            <a href="/article/view/{{_id}}" target="_blank">
                <h1>{{title}}</h1>
            </a>
        </div>
        <div class="article__additional-info">
            <div class="article__post-date">
                <span>{{visible_date}}</span>
            </div>
            <div class="article__rates">
                <span class="article__like-button" href="#">
                    <svg xmlns="http://www.w3.org/2000/svg" width="15" height="15" fill="gray" class="bi bi-heart"
                        viewBox="0 0 16 16">
                        <path
                            d="M8 2.748l-.717-.737C5.6.281 2.514.878 1.4 3.053c-.523 1.023-.641 2.5.314 4.385.92 1.815 2.834 3.989 6.286 6.357 3.452-2.368 5.365-4.542 6.286-6.357.955-1.886.838-3.362.314-4.385C13.486.878 10.4.28 8.717 2.01L8 2.748zM8 15C-7.333 4.868 3.279-3.04 7.824 1.143c.06.055.119.112.176.171a3.12 3.12 0 0 1 .176-.17C12.72-3.042 23.333 4.867 8 15z" />
                    </svg>
                    <span class="article__like-counter" style="color: gray;">{{likes.length}}</span>
                </span>
                <span class="article__dislike-button" href="#">
                    <svg xmlns="http://www.w3.org/2000/svg" width="15" height="15" fill="gray" class="bi bi-emoji-frown"
                        viewBox="0 0 16 16">
                        <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z" />
                        <path
                            d="M4.285 12.433a.5.5 0 0 0 .683-.183A3.498 3.498 0 0 1 8 10.5c1.295 0 2.426.703 3.032 1.75a.5.5 0 0 0 .866-.5A4.498 4.498 0 0 0 8 9.5a4.5 4.5 0 0 0-3.898 2.25.5.5 0 0 0 .183.683zM7 6.5C7 7.328 6.552 8 6 8s-1-.672-1-1.5S5.448 5 6 5s1 .672 1 1.5zm4 0c0 .828-.448 1.5-1 1.5s-1-.672-1-1.5S9.448 5 10 5s1 .672 1 1.5z" />
                    </svg>
                    <span class="article__dislike-counter" style="color: gray;">{{dislikes.length}}</span>
                </span>
                <span class="article__comment-button">
                    <svg xmlns="http://www.w3.org/2000/svg" width="15" height="15" fill="gray"
                        class="bi bi-chat-left-text" viewBox="0 0 16 16">
                        <path
                            d="M14 1a1 1 0 0 1 1 1v8a1 1 0 0 1-1 1H4.414A2 2 0 0 0 3 11.586l-2 2V2a1 1 0 0 1 1-1h12zM2 0a2 2 0 0 0-2 2v12.793a.5.5 0 0 0 .854.353l2.853-2.853A1 1 0 0 1 4.414 12H14a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z" />
                        <path
                            d="M3 3.5a.5.5 0 0 1 .5-.5h9a.5.5 0 0 1 0 1h-9a.5.5 0 0 1-.5-.5zM3 6a.5.5 0 0 1 .5-.5h9a.5.5 0 0 1 0 1h-9A.5.5 0 0 1 3 6zm0 2.5a.5.5 0 0 1 .5-.5h5a.5.5 0 0 1 0 1h-5a.5.5 0 0 1-.5-.5z" />
                    </svg>
                    <span class="article__comment-counter" style="color: gray;">{{comments.length}}</span>
                </span>
            </div>
        </div>
        <div class="article__preview">
            <article>{{{shortText}}}</article>
        </div>
        <div class="article__buttons">
            <a class="article__more-button" target="_blank" href="/article/view/{{_id}}">More...</a>
        </div>
    </div>
    {{/each}}
    {{else}}
    <h1>There is no articles yet.</h1>
    {{/if}}
</div>